---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Drawable from "../components/Drawable.astro";
import { IconArrowUpFilled } from "../components/icons/Icons";
interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="es" class=`scroll-smooth`>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="bg-gray-900 min-h-screen w-full absolute pb-24">
		<Header />
		<Drawable />
		<section class="relative" transition:persist>
		</section>
		<section id="up"></section>
		<slot name="before-main" />
		<main class="max-w-5xl py-3 mx-auto">
			<slot />
		</main>
		<Footer />
		<a
			href="#up"
			class="fixed bottom-8 right-8 font-extrabold text-center text-slate-300 rounded-full"
		>
			<IconArrowUpFilled width="44" height="44" />
		</a>
		<style is:global>
			html {
				font-family: system-ui, sans-serif;
				color: #fff;
				color-scheme: dark light;
			}

			*::-webkit-scrollbar {
				background-color: none;
				width: 6px;
				height: 4px;
			}
			*::-webkit-scrollbar-thumb {
				background: rgb(255, 255, 255, 0.7);
				border-radius: 10px;
			}
			h1,
			h2,
			h3,
			h4,
			h5,
			h6 {
				font-weight: bold;
			}
			h1 {
				font-size: 1.75em;
				line-height: 1.225;
			}
			h2 {
				font-size: 1.75em;
				line-height: 1.225;
			}
			h3 {
				font-size: 1.5em;
				line-height: 1.43;
			}
			h4 {
				font-size: 1.25em;
				line-height: 1.4;
			}
			h5 {
				line-height: 1.4;
			}
			h6 {
				font-size: 1em;
			}
			#fr-logo {
				display: none;
			}
			.fr-quick-insert {
				display: none;
			}

			input[type="range"]::-webkit-slider-runnable-track {
				width: 100%;
				height: 8px;
				background: #475569; /* slate-600 */
			}

			input[type="range"]::-webkit-slider-thumb {
				-webkit-appearance: none;
				outline: none;
				transform: translateY(-25%);
				background: #475569; /* slate-600 */
				cursor: pointer;
			}

			input[type="range"]:focus::-webkit-slider-runnable-track {
				background: #334155; /* slate-700 */
			}

			input[type="range"]::-moz-range-track {
				width: 100%;
				height: 8px;
				background: #475569; /* slate-600 */
				border-radius: 4px;
			}

			input[type="range"]::-moz-range-thumb {
				border-radius: 50%;
				transform: translateY(-25%);
				background: #475569; /* slate-600 */
				cursor: pointer;
			}

			input[type="range"]::-ms-track {
				width: 100%;
				height: 8px;
				background: transparent;
				border-color: transparent;
				color: transparent;
			}

			input[type="range"]::-ms-fill-lower {
				background: #475569; /* slate-600 */
				border-radius: 4px;
			}

			input[type="range"]::-ms-fill-upper {
				background: #475569; /* slate-600 */
				border-radius: 4px;
			}

			input[type="range"]::-ms-thumb {
				border-radius: 50%;
				transform: translateY(-25%);
				cursor: pointer;
			}
		</style>
		<script>
			document.querySelector('html')?.classList.add(localStorage.getItem('astroErrorOverlayTheme') + '')
		</script>
	</body>
</html>
