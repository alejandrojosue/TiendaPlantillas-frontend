---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-900 min-h-screen w-full absolute pb-24">
		<Header />
		<ViewTransitions />
		<section id="up"></section>
		<slot name="before-main"/>
		<main class="max-w-5xl py-3 mx-auto">
			<slot />
		</main>
		<Footer />
		<a
			href="#up"
			class="fixed bottom-8 right-8 font-extrabold text-center text-slate-300 rounded-full"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				class="icon icon-tabler icon-tabler-circle-arrow-up-filled"
				width="44"
				height="44"
				viewBox="0 0 24 24"
				stroke-width="1.5"
				stroke="currentColor"
				fill="none"
				stroke-linecap="round"
				stroke-linejoin="round"
			>
				<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
				<path
					d="M17 3.34a10 10 0 1 1 -14.995 8.984l-.005 -.324l.005 -.324a10 10 0 0 1 14.995 -8.336zm-4.98 3.66l-.163 .01l-.086 .016l-.142 .045l-.113 .054l-.07 .043l-.095 .071l-.058 .054l-4 4l-.083 .094a1 1 0 0 0 1.497 1.32l2.293 -2.293v5.586l.007 .117a1 1 0 0 0 1.993 -.117v-5.585l2.293 2.292l.094 .083a1 1 0 0 0 1.32 -1.497l-4 -4l-.082 -.073l-.089 -.064l-.113 -.062l-.081 -.034l-.113 -.034l-.112 -.02l-.098 -.006z"
					stroke-width="0"
					fill="currentColor"></path>
			</svg>
		</a>
	</body>
</html>

<style is:global>
	html {
		font-family: system-ui, sans-serif;
		color: #fff;
		color-scheme: dark light;
	}

	body::-webkit-scrollbar {
		background-color: none;
		width: 6px;
	}
	body::-webkit-scrollbar-thumb {
		background: rgb(255, 255, 255, 0.7);
		border-radius: 10px;
	}
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		font-weight: bold;
	}
	h1 {
		font-size: 1.75em;
		line-height: 1.225;
	}
	h2 {
		font-size: 1.75em;
		line-height: 1.225;
	}
	h3 {
		font-size: 1.5em;
		line-height: 1.43;
	}
	h4 {
		font-size: 1.25em;
		line-height: 1.4;
	}
	h5 {
		line-height: 1.4;
	}
	h6 {
		font-size: 1em;
	}
</style>
