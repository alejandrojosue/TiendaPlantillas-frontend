---
import FilterButton from './FilterButton';
---

<div
 class="flex col-auto gap-x-3 items-center mb-5 justify-center w-full text-center lg:flex-row"
>
 <FilterButton link="#" sort="desc" client:load>
  <svg
   xmlns="http://www.w3.org/2000/svg"
   class="icon icon-tabler icon-tabler-circle-arrow-up"
   width="44"
   height="44"
   viewBox="0 0 24 24"
   stroke-width="1.5"
   stroke="currentColor"
   fill="none"
   stroke-linecap="round"
   stroke-linejoin="round"
  >
   <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
   <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
   <path d="M12 8l-4 4"></path>
   <path d="M12 8v8"></path>
   <path d="M16 12l-4 -4"></path>
  </svg>
  <span>Los más nuevos</span>
 </FilterButton>
 <FilterButton link="#" sort="asc" client:load>
  <svg
   xmlns="http://www.w3.org/2000/svg"
   class="icon icon-tabler icon-tabler-circle-arrow-down"
   width="44"
   height="44"
   viewBox="0 0 24 24"
   stroke-width="1.5"
   stroke="currentColor"
   fill="none"
   stroke-linecap="round"
   stroke-linejoin="round"
  >
   <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
   <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
   <path d="M8 12l4 4"></path>
   <path d="M12 8v8"></path>
   <path d="M16 12l-4 4"></path>
  </svg>

  <span>Los más viejos</span>
 </FilterButton>
</div>
